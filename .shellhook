#!/usr/bin/env bash

if [ "$(uname -s)" = "Darwin" ]; then
    alias ls="ls --color=auto"
    alias ll="ls -l"
else
    alias open="xdg-open"
fi

export WD=$PWD

runo () {
    ocp-indent "$1" > tmp.ml
    if diff "$1" tmp.ml > /dev/null 2>&1; then
        rm tmp.ml
    else
        mv tmp.ml "$1"
    fi
    ocaml -w +1..66 "$1"
}

export -f runo
