#!/usr/bin/env bash

if [ "$(uname -s)" = "Darwin" ]; then
    alias ls="ls --color=auto"
    alias ll="ls -l"
else
    alias open="xdg-open"
fi

export WD=$PWD

for x in bin build out; do
    if [ ! -d "$WD/$x" ]; then
        mkdir "$WD/$x"
    fi
done

export FLAGS=(
    -g
    -I "$BENCHMARK_CMXA_PATH"
    -I +str
    -I +unix
    -nolabels
    -strict-formats
    -strict-sequence
    -unboxed-types
    -w "+1..67-4-42"
)
export LIBS=(
    str.cmxa
    unix.cmxa
    benchmark.cmxa
)
export OCAMLRUNPARAM="a=0,b,c,o=80"

runo () {
    handle=$(basename "${1%%.*}")
    args=("$@")

    if [ ! -f "$1" ]; then
        return
    fi

    ocp-indent "$1" > tmp.ml
    if diff "$1" tmp.ml > /dev/null 2>&1; then
        rm tmp.ml
    else
        mv tmp.ml "$1"
    fi

    cp "$1" "$WD/build/$handle.ml"
    if $(
        cd "$WD/build" || return
        ocamlopt "${FLAGS[@]}" "${LIBS[@]}" -o "$WD/bin/$handle" "$handle.ml"
    ); then
        "$WD/bin/${handle}" "${args[@]:1}"
    fi
}

export -f runo
