#!/usr/bin/env bash

if [ "$(uname -s)" = "Darwin" ]; then
    alias ls="ls --color=auto"
    alias ll="ls -l"
else
    alias open="xdg-open"
fi

export WD=$PWD

for x in bin build out; do
    if [ ! -d "$WD/$x" ]; then
        mkdir "$WD/$x"
    fi
done

export FLAGS=(
    -g
    -I "$BENCHMARK_CMA_PATH"
    -o "$TARGET"
    -unboxed-types
    -w +1..66
)
export LIBS=(
    unix.cma
    benchmark.cma
)
export OCAMLRUNPARAM="a=0,b,c,o=80"

runo () {
    handle=$(echo "$1" | sed 's/^[a-z\/]*\/\(.*\)\.[a-z]*$/\1/')
    pin=$PWD
    ocp-indent "$1" > tmp.ml
    if diff "$1" tmp.ml > /dev/null 2>&1; then
        rm tmp.ml
    else
        mv tmp.ml "$1"
    fi
    cp "$1" "$WD/build/$handle.ml"
    (
        cd "$WD/build" || return
        ocamlc "${FLAGS[@]}" "${LIBS[@]}" -o "$WD/bin/$handle" "$handle.ml" \
            || return
        cd "$pin" || return
        if [ -z "$2" ]; then
            "$WD/bin/$handle"
        else
            "$WD/bin/$handle" "$2"
        fi
    )
}

export -f runo
